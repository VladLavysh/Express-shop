<h1>Card</h1>

<div id="card">
  {{#if courses.length}}
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Count</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>

      {{#each courses}}
      <tr>
        <td>{{title}}</td>
        <td>{{price}}</td>
        <td>{{count}}</td>
        <td>
          <button class="btn btm-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Remove</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <p><strong>Price:</strong> <span class="price">{{price}}</span></p>

  <form action="/orders" method="POST">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn">Create order</button>
  </form>
  {{else}}
  <p>Card is empty</p>
  {{/if}}
</div>