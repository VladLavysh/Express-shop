<h1>Edit course {{course.title}}</h1>

<form action="/courses/edit" method="POST" style="margin-bottom: 1rem">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
    <label for="title">Course title</label>
    <span class="helper-text" data-error="Enter title"></span>
  </div>

  <div class="input-field">
    <input id="price" name="oprice" type="text" class="validate" required min="1" value="{{course.price}}">
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Enter price"></span>
  </div>

  <div class="input-field">
    <input id="img" name="image" type="text" class="validate" required value="{{course.image}}">
    <label for="img">URL address</label>
    <span class="helper-text" data-error="Enter image address"></span>
  </div>

  <input type="hidden" name="id" value="{{course.id}}">
  <input type="hidden" name="_csrf" value="{{csrf}}">

  <button type="submit" class="btn btn-primary">Edit course</button>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <input type="hidden" name="id" value="{{course.id}}">
  <button class="btn red">Remove course</button>
</form>